@model PagedList.IPagedList<sincDelivery.BDO.PutniNalog.PutniNalogBDO>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Panel vozaca";
}

<div id="wrapper">

    <div id="page-wrapper">

        <h2 class="text-center naslovNaloga">Pregled aktivnih naloga</h2>

        @if (Model.Count != 0)
        {
            foreach (var x in Model)
            {

                <div  class="col-sm-4 col-xs-6">
                    <div class="pregledNaloga">

                        <div class="pro-bref fix">
                            <div class="row">
                                @*<div class="col-md-1 col-sm-1"></div>*@
                                <div class="col-md-12 col-sm-12">
                                    <div class="pro-ratting float-left">
                                        <span>Ruta:</span>
                                        <a class="pro-name" href="javascript:otvoriNalog(@x.ID)">@x.Polazak - @x.Odrediste</a>
                                    </div>

                                    @*<div class="pro-price float-right">
                                            <span id="likeNumber">@x.BrojLikeova</span>&nbsp;<span>omiljenih</span>
                                        </div>*@
                                </div>
                                @*<div class="col-md-2 col-sm-2"></div>*@
                            </div>
                            @*<a class="pro-name" href="product-details.html">@x.Naziv</a>*@
                            @*<div class="pro-ratting float-left">
                                    <span>@x.GradNaziv</span>
                                </div>*@
                    
                     
                                <div class="pro-price float-left"><span class="new">Vrijeme polaska: </span>@x.DatumIVrijemePolaska   </div>

                                <div class="pro-price float-right dugme"><a href="javascript:otvoriNalog(@x.ID)"><span class="glyphicon glyphicon-arrow-right pull-right"></span></a></div>
                            
                        </div>
                    </div>
                </div>

            }
        }
    </div>
</div>



<script>

    function otvoriNalog(nalogID) {

        // window.location.href = "../Home/Proizvod/"+artikalID;

        //KrpiceMain.StartLoading();
        window.location.href = "/PutniNalog/Nalog/?NalogID=" + nalogID;

    }
</script>