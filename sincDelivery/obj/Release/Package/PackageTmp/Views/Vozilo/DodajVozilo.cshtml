                        @Html.ValidationMessageFor(model => model.RegistarskiBroj, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.BrojSasije, htmlAttributes: new { @class = "control-label col-md-2" })
