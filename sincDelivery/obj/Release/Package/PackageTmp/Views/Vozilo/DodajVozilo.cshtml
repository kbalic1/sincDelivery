@model sincDelivery.BDO.Vozilo.VoziloBDO

@{
    ViewBag.Title = "DodajVozilo";
}


<div id="wrapper">
    <!-- Navigation -->

    <div id="page-wrapper">
        <h2>Dodaj novo vozilo</h2>


        @using (Html.BeginForm())
